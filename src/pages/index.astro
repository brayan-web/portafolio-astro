<style>
	.bg-section{
		background-image: url("../assets/bg.png");
		background-repeat: no-repeat;
		height: 100vh;
		
		background-size: cover;
		background-position: center;
	}
	.content{
		
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		height: 100vh;
	}

	.tipyng{
		color: #42D684;
		border-right: .13em solid #42D684;
		animation: typing 4s steps(38) 2s 1 normal both , blink 1s steps(1) infinite;
		width: 0;
		overflow: hidden;
		white-space: nowrap;
	}
	.animated__image{
		transition: all 0.2s;

		animation: moveInleft 0.5s ease-out 0.75s;
	}
	.animated__btn{
		animation: moveInBottom 0.5s ease-out 0.75s;
		transition: all 0.2s;

	}
	.cartoon__image{
		position: absolute;

	}
	@keyframes blink {
		50% {
			border-color: transparent;
		}
	}
	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}
	@keyframes moveInleft {
		0%{
			opacity: 0;
			transform: translateX(-100%);
		}
		80%{
			transform: translateX(1rem);
		}

		100%{
			opacity: 1;
			transform: translate(0);


		}
	}

	@keyframes moveInRight {
		0%{
			opacity: 0;
			transform: translateX(100%);
		}
		80%{
			transform: translateX(-1rem);
		}

		100%{
			opacity: 1;
			transform: translate(0);


		}
	}
	@keyframes moveInBottom {
		0%{
			opacity: 0;
			transform: translateY(3rem);
		}

		100%{
			opacity: 1;
			transform: translate(0);

		}
	}
</style>


