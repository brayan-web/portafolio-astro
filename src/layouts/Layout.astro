---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ScrollUp from "../components/ScrollUp.astro";
import "@fontsource-variable/roboto-flex";

interface Props {
	title: string;
}

const { title } = Astro.props;
import "../styles/index.css";
import "aos/dist/aos.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio web del frontend developer brayan antonio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-16x16.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<title>{title}</title>
	</head>
	<body class="relative  bg-gray-950 h-full w-full text-black dark:text-white"> 
	  	<Header/>
		<!-- Contenedor principal con grid -->
		<div class="relative grid grid-cols-1 md:grid-cols-12">
			<!-- Borde izquierdo (visible solo en md+) -->
			<div class="col-start-1 row-span-full row-start-1 hidden border-r border-r-gray-800 bg-[image:repeating-linear-gradient(315deg,currentColor_0,currentColor_1px,transparent_0,transparent_50%)] bg-[size:10px_10px] bg-fixed opacity-5 md:block dark:opacity-10"></div>
			
			<!-- Contenido principal -->
			<div class="col-span-full md:col-start-2 md:col-end-12">
				<div class="max-w-7xl mx-auto px-4 md:px-8">
					<slot/>
				</div>
			</div>
			
			<!-- Borde derecho (visible solo en md+) -->
			<div class="col-start-12 row-span-full row-start-1 hidden border-l border-l-gray-800 bg-[image:repeating-linear-gradient(315deg,currentColor_0,currentColor_1px,transparent_0,transparent_50%)] bg-[size:10px_10px] bg-fixed opacity-5 md:block dark:opacity-10"></div>
		</div>
		<!-- <div class="max-w-7xl mx-auto px-4 md:px-8">
			<slot/>
		</div> -->
		<ScrollUp/>
		<Footer/>
		<script>
			import { aosInit } from "../services/aos";
			aosInit();
		</script>
	</body>
</html>


<style>
	  :root {
    color-scheme: light dark;
  }

html{
	scroll-behavior: smooth;
	font-family: "Roboto Flex Variable", sans-serif;
}
body {
    color: rgba(17, 17, 17, 0.9);
    
  }

</style>